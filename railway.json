{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "variables": {
        "IB_HOST": "127.0.0.1",
        "IB_PORT": "7497",
        "IB_CLIENT_ID": "42",
        "ENABLE_XRP": "true",
        "MAX_WSB_POSTS": "50"
      }
    }
  }
}
